<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GangwonActivity">
    <androidx.appcompat.widget.Toolbar
        android:background="#81D4FA"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:textColor="#fff"
            android:fontFamily="@font/sdsoutline"
            android:gravity="center"
            android:text="Trip Friend"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="600dp"
            android:layout_height="600dp"
            android:src="@drawable/gangownm" />

        <Button
            android:fontFamily="@font/maplestorybold"
            android:id="@+id/gangneung"
            android:background="@drawable/btdesign"
            android:layout_width="77dp"
            android:layout_height="29dp"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="240dp"
            android:text="강릉" />

        <Button
            android:fontFamily="@font/maplestorybold"
            android:id="@+id/sokcho"
            android:background="@drawable/btdesign"
            android:layout_width="77dp"
            android:layout_height="29dp"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="300dp"
            android:text="속초"
             />

        <Button
            android:fontFamily="@font/maplestorybold"
            android:id="@+id/inje"
            android:background="@drawable/btdesign"
            android:layout_width="77dp"
            android:layout_height="29dp"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="300dp"
            android:text="인제"
             />

        <Button
            android:fontFamily="@font/maplestorybold"
            android:id="@+id/wonju"
            android:background="@drawable/btdesign"
            android:layout_width="77dp"
            android:layout_height="29dp"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="360dp"
            android:text="원주"
             />

        <Button
            android:fontFamily="@font/maplestorybold"
            android:id="@+id/pyeongchang"
            android:background="@drawable/btdesign"
            android:layout_width="77dp"
            android:layout_height="29dp"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_marginLeft="123dp"
            android:layout_marginTop="200dp"
            android:text="평창"

            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
